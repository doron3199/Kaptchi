Frontend:

<Frontend>:
    orientation: 'vertical'
    Image:
        id: main_image
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.3
        Slider:
            id: zoom
            min: 1
            max: 100
            step: 1
            orientation: 'horizontal'
            on_value: root.on_zoom_slider_change(self)
        Button:
            text: 'change camera'
            on_press: root.on_change_camera_btn_click()
        ToggleButton:
            text: 'whiteboard filter'
            on_state: root.on_whiteboard_filter_btn_click()
