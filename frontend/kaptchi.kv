Frontend:

<Frontend>:
    orientation: 'vertical'
    Image:
        id: main_image
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.3
        Slider:
            id: zoom
            min: 1
            max: 100
            step: 1
            orientation: 'horizontal'
            on_touch_move: root.on_zoom_slider_change()
        Button:
            text: 'change camera'
            on_press: root.on_change_camera_btn_click()
