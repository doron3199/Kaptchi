Frontend:

<Frontend>:
    orientation: 'vertical'
    AnchorLayout:
        Image:
            id: main_image
            allow_stretch: True
        MainImageBlock:
            id: main_image_block
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        id: bottom_bar
        Slider:
            id: zoom
            min: 1
            max: 100
            step: 1
            orientation: 'horizontal'
            on_value: root.on_zoom_slider_change(self)
        Button:
            text: 'change camera'
            on_press: root.on_change_camera_btn_click()
        ToggleButton:
            text: 'whiteboard filter'
            on_state: root.on_whiteboard_filter_btn_click()

